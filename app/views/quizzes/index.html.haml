.page-header
  = link_to new_quiz_path, class: 'btn btn-primary' do
    %span.glyphicon.glyphicon-plus
    New Quiz
  %h1 Listing quizzes

.table-responsive
  %table.table.table-striped.table-bordered.table-hover
    %thead
      %tr
        %th Quiz ID
        %th Groups
        %th Active?
        %th
        %th
        %th

    %tbody
      - @quizzes.each.with_index(1) do |quiz, index|
        %tr
          %td= index
          %td
            %ul
              - quiz.groups.each do |group|
                %li
                  = group.name
          %td= check_box_tag(:active, quiz.id, quiz.active, {class: 'toggle-quiz'})
          %td= link_to 'Show', quiz
          %td= link_to 'Edit', edit_quiz_path(quiz)
          %td= link_to 'Destroy', quiz, data: { confirm: 'Are you sure?' }, method: :delete
