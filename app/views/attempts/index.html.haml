.page-header
  %h1=t(:listing_attempts)

.table-responsive
  %table.table.table-striped.table-bordered.table-hover
    %thead
      %tr
        %th= t(:course_code)
        %th= t(:quiz_number)
        %th= t(:completed)
        %th= t(:group_name)
        %th

    %tbody
      - @attempts.each do |attempt|
        %tr
          %td= attempt.quiz_permutation.group.course.course_name_concat
          %td= (attempt.quiz_permutation.group.quizzes.index { |h| h == attempt.quiz_permutation.quiz } + 1 ).ordinalize + " quiz"
          %td= raw attempt.completed? ? "&#x2713;" : "&#x2717;"
          %td= attempt.quiz_permutation.group.name
          %td= link_to t(:take_quiz), edit_attempt_path(attempt)
