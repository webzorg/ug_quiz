.page-header
  = link_to groups_path, class: 'btn btn-default' do
    %span.glyphicon.glyphicon-list-alt
    Back
  &nbsp
  = link_to edit_group_path(@group), class: 'btn btn-primary' do
    %span.glyphicon.glyphicon-pencil
    Edit
  %h1 Show group

%dl.dl-horizontal
  %dt Name:
  %dd= @group.name
  %dt Semester:
  %dd= @group.semester.semester_name_concat
  %dt Professor:
  %dd= @group.professor.name
  %br/
  %dt Students:
  %dd
    - @group.students.each do |student|
      =student.student_name_concat
      %br/
