= form_for @group, html: { class: "form-horizontal", role: "form" } do |f|
  -if @group.errors.any?
    .alert.alert-danger.alert-dismissable{role: "alert"}
      %button.close{type: "button", data: {dismiss: "alert"} }
        %span{aria: {hidden: "true"} } &times;
        %span.sr-only Close
      %h4= "#{pluralize(@group.errors.count, "error")} prohibited this group from being saved:"

      %ul
        - @group.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :name, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :name, class: 'form-control'
  .form-group
    = f.label :semester, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.collection_select(:semester_id, Semester.all, :id, :semester_name_concat, {include_hidden: true}, { class: 'form-control' })
  .form-group
    = f.label :professor, class: 'col-sm-2 control-label'
    .col-sm-10
      = current_professor.name
  .form-group
    = f.label :students, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.collection_select(:student_ids, Student.all, :id, :student_name_concat,
      {include_hidden: true}, { id: 'include_students_in_group', class: 'form-control', multiple: true })
  .form-group
    .col-sm-offset-2.col-sm-10
      = f.submit class: 'btn btn-primary'
