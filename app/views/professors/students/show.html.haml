.page-header
  = link_to :back, class: "btn btn-default" do
    %span.glyphicon.glyphicon-list-alt
    Back
  &nbsp;
  = link_to edit_professors_student_path(@student), class: "btn btn-primary #{can_class(:update, Student)}" do
    %span.glyphicon.glyphicon-pencil
    Edit
  %h1= t(:show_student)

%dl.dl-horizontal
  %dt Name:
  %dd= @student.name
  %br
  %dt Student:
  %dd= @student.student_id
  %br
  %dt Email:
  %dd= @student.email
