          %a.dropdown-toggle{"aria-expanded": "false", "data-toggle": "dropdown", href: "#", role: "button"}
            = t(:user_management)
            %span.caret
          %ul.dropdown-menu{role: "menu"}
            %li{class: active_class(professors_professors_path)}
              =link_to t(:professors), professors_professors_path
            %li{class: active_class(professors_students_path)}
              =link_to t(:students), professors_students_path

